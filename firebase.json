{
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "kikr",
        "destination": "https://coderdojo-wiesbaden.de/projekte/tischkicker",
        "type": 301
      },
      {
        "source": "slack",
        "destination": "https://coderdojowiesbaden.slack.com",
        "type": 301
      },
      {
        "source": "inst",
        "destination": "https://www.instagram.com/cd.wi",
        "type": 301
      },
      {
        "source": "b/:post*",
        "destination": "https://blog.cdwi.de/:post*",
        "type": 301
      },
      {
        "source": "blog/:post*",
        "destination": "https://blog.cdwi.de/:post*",
        "type": 301
      },
      {
        "source": ":post*",
        "destination": "https://blog.cdwi.de/:post*",
        "type": 301
      },
      {
        "source": "/",
        "destination": "https://blog.cdwi.de/",
        "type": 301
      }
    ] 
  }
}
